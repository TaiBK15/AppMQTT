                        android:textSize="@dimen/size_text_device"
                        android:textColor="@color/textColorPrimary"
                        android:textStyle="bold"
                        android:textAlignment="center"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


